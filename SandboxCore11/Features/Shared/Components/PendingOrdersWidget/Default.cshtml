@model IEnumerable<SandboxCore11.Features.Shared.Components.PendingOrdersWidget.PendingOrderViewModel>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Pending Orders</h3>
    </div>
    <div class="panel-body">
        <div class="list-group">
            @foreach (var order in Model)
            {
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">
                        <span>PO: @order.PurchaseOrderId</span>
                        <span>Status: @order.Status</span>
                        <span last-updated="@order.ExpectedDeliveryDate" class="pull-right">Expected: @order.ExpectedDeliveryDate</span>
                    </h4>
                    <p class="list-group-item-text">
                        @order.SupplierName
                    </p>
                    <div class="progress">
                        <progress-bar stage="@order.Status"></progress-bar>
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="panel-footer">
        <a class="pull-right btn btn-primary" href="#">See all</a> <br />
        <span class="clearfix"></span>
    </div>
</div>