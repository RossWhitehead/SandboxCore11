                <input asp-for="RequestedDate" class="form-control" />
                <span asp-validation-for="RequestedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmedDate" class="form-control" />
