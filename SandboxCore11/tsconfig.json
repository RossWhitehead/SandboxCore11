{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./wwwroot/js",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "Features",
    "Scripts"
  ],
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  }
}

